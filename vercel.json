{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/sync",
      "schedule": "* * * * *"
    }
  ],
  "functions": {
    "api/sync.py": {
      "maxDuration": 60,
      "runtime": "python3.11"
    },
    "api/status.py": {
      "maxDuration": 10,
      "runtime": "python3.11"
    },
    "api/init.py": {
      "maxDuration": 30,
      "runtime": "python3.11"
    }
  }
}
