# Telegram API credentials (from https://my.telegram.org)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Telegram StringSession (generate using scripts/generate_session.py)
TELEGRAM_STRING_SESSION=your_string_session

# Spotify API credentials (from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_client_id
SPOTIFY_CLIENT_SECRET=your_client_secret
SPOTIFY_REFRESH_TOKEN=your_refresh_token

# Vercel Blob token (auto-set by Vercel when Blob is enabled)
BLOB_READ_WRITE_TOKEN=

# Optional: Customize sync behavior
NAME_TEMPLATE=| {artist_first} - {title}
TRUNCATE_LENGTH=64
MIN_UPDATE_INTERVAL=180

# Optional: Cron secret for endpoint protection
CRON_SECRET=your_random_secret
